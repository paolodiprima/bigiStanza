<script>
    $('form#contatti').submit(function(event){
        event.preventDefault();
        var data = $(this).serialize();
       
        // msg insert into db and email sent to BGStanza email's address        
        $.ajax({
            dataType: 'JSON',
            data: data,
            type: 'POST',
            url: '/api-insert-info',
            success: function(dataj,status){
                 console.log(JSON.stringify(dataj));
                 console.log('status from API: '+status);
                 $('form#contatti').trigger('reset');
                 alert("MESSAGGIO INVIATO!");
            },
            error: function(){
                alert("Si è verificato un errore durante l'invio");
            }
        });
    });

</script>
