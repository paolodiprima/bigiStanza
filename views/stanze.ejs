<!-- main container -->

    <div class="container-fluid" id="appartamenti">
       
        <% for (roomIndex in appart.rooms) {  %>
        <!-- start list of rooms -->
        
        <div class="row">
            <div class="col-lg-8 d-flex">
                <div id="carouselIndicator<%= roomIndex %>" class="carousel slide border  shadow flex-fill">
                    <ol class="carousel-indicators">

                        <% for (indexImgRoom in appart.rooms[roomIndex].img) { %>
                            <li data-target="#carouselIndicator<%= indexImgRoom %>" data-slide-to="<%= indexImgRoom %>"  ></li>
                        <% } %>

                    </ol>                    
                    <div class="carousel-inner" role="listbox">
                        <% for (indexImgRoom in appart.rooms[roomIndex].img){ %>
                            <% if (indexImgRoom==0){ %>
                                <div class="carousel-item active">
                                    <div class="img">
                                        <img class="d-block img-fluid" src="../img/<%= appart.rooms[roomIndex].img[indexImgRoom] %>" >
                                    </div>
                                </div>
                            <% } else { %>
                                <div class="carousel-item">
                                    <div class="img">
                                        <img class="d-block img-fluid" src="../img/<%= appart.rooms[roomIndex].img[indexImgRoom] %>" >
                                    </div>
                                </div>
                            <% } %> <!-- else -->
                        <% } %> <!-- for img appart -->  
                    </div> <!-- carousel-inner -->
                    <a class="carousel-control-prev" href="#carouselIndicator<%= roomIndex %>" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselIndicator<%= roomIndex %>" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div> <!-- carousel -->
             </div> <!--col-lg-8-->

            <div class="col-lg-4 d-flex"> <!-- d-flex -->
                <div class="card  border shadow flex-fill"> <!--flex-fill-->
                    <div class="card-header">
                        prezzo : <%= appart.rooms[roomIndex].price %>
                    </div>
                    <div class="card-body d-flex flex-column">   

                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">misura: <%= appart.rooms[roomIndex].size %> mq</li>
                            <li class="list-group-item">libera dal: <%= (appart.rooms[roomIndex].contracts[0].outDate).substr(0,10) %></li>
                            <li class="list-group-item">indirizzo: <%= appart.address %></li>
                            <li class="list-group-item">accesso: <%= appart.rooms[roomIndex].extAccess %></li>
                        </ul>
                            <a href="#contatti" class="btn btn-info  mt-auto">INFO</a> <!-- mt-3 -->
                    </div> <!-- card-body -->
                </div> <!-- card -->
            </div> <!-- col-lg-4-->
        </div> <!-- row -->
        
 


   
  
    <% } %> <!-- main for -->
</div> <!--   rooms list container -->


    <h3 class="text-center  my-3">Tieniti in Contatto</h3>
    <div class="container-fluid mb-3">
        <div class="row">
            <div class="col-3 d-none d-md-block"></div>
    
            <div class="col-12 col-md-6 col-sm-offset-3">
    
                <form  class="border" action="/api-insert-info" method="POST" id="contatti" autocomplete="on">
                    <div class="container">
                    <div class="form-group">
                        <label for="nome">Nome (*)</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-user"></i></span>
                            </div>
                            <input type="text"  class="form-control" id="nome" name="name" placeholder="Nome">
                        </div>
                    </div>

                    <div class="form-group">
                    <label for="cognome">Cognome (*)</label>
                    <div class="input-group" id="test">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-user"></i></span>
                        </div>
                        <input type="text" class="form-control" id="cognome" name="cognome" placeholder="Cognome">
                    </div>
                </div>
                   
                <div class="form-group">
                    <label for="email">Email (*)</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-at"></i></span>
                        </div>
                        <input type="email" class="form-control" id="email" name="email" placeholder="email">
                    </div>
                </div>    
                
                <div class="input-group inline ">
                    <div class="form-group  flex-fill">
                        <label for="numeroTel">Numero Tel.</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-phone"></i></span>
                            </div>
                            <input type="text" class="form-control" id="numeroTel" name="numeroTel" placeholder="telefono">
                        </div>
                    </div>
                    <div class="form-group  flex-fill">
                        <label for="attività">Attività</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="far fa-address-card"></i></span>
                            </div>
                            <input type="text" class="form-control" id="attivita" name="attivita" placeholder="attività">
                        </div>
                    </div>
                </div> <!--input-group inline -->
                    
                <div class="input-group inline ">
                    <div class="form-group flex-fill">
                        <label for="entrata">Entrata</label>
                        <input type="date" class="form-control" id="entrata" name="entrata">
                    </div>
                    <div class="form-group flex-fill">
                        <label for="uscita" >Uscita</label>
                        <input type="date" class="form-control" id="uscita" name="uscita">
                    </div>
                </div>
                <div class="form-group">
                    <label for="msg">Messaggio</label>
                    <textarea name="msg" class="form-control" id="msg" name="msg" rows="4" placeholder="scrivi qui le tue domande..."></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary" type="submit" >Submit</button>
                </div>
                <small class="text-muted">(*) campi obbligatori</small>
            </div> <!--container form-->
            </form>
            </div>
        </div> <!-- row -->
    </div>  <!-- container fluid -->

