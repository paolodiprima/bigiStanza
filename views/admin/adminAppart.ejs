<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
 
<script>
        $(document).ready(function () {

          $(document).on('click', '.cancel', function (e) {
            e.preventDefault();
            let internalId = $(this).attr('data-internalId')
            $('#msgConferma').html('sicuro di cancellare con ID : ' + internalId);
            
            // pass mongo id to button attribute
            $('#btnDelete').attr('data-id',  $(this).attr('data-id'))
           
            $('#modalCancel').modal('show');
          });

          $(document).on('click', '#btnDelete', function (e) {
            e.preventDefault();
            let appId = $(this).attr('data-id')
            $('#modalCancel').modal('hide')
            callAjax(appId);
          });

          function callAjax(id) {
            let url = "/api/deleteAppart/" + id;
            
            $.ajax({
              type: 'DELETE',
              url: url,
              success: function (result, status) {
                setTimeout( ()=> { alert('APPARTAMENTO ELIMINATO');
                                   location.reload(true); },
                                   1500);
              },
              error: function () {
                alert('Si Ã¨ verificato un errore durante la cancellazione')
              }
            });
          } // callAjax

        }); // $(document).ready
</script>

</body>
</html>